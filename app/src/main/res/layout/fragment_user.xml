<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutNom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Nom"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Nom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                        android:drawableLeft="@drawable/ic_menu_profile"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="@string/Nom" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutCognoms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Cognoms"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Cognoms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                        android:drawableLeft="@drawable/ic_profile_lastname"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="@string/Cognoms" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutNomUsuari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Username"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/NomUsuari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:drawableLeft="@drawable/ic_profile_username"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="@string/Username" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutCorreuElectronic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Email"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/CorreuElectronic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:drawableLeft="@drawable/ic_profile_email"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:text="@string/Email" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutContrasenya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Password"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:errorIconDrawable="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Contrasenya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:drawableStart="@drawable/ic_profile_password"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:text="@string/Password" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutDataNaixement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Data_Naixement"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/DataNaixement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:clickable="true"
                        android:datePickerMode="calendar"
                        android:drawableLeft="@drawable/ic_profile_birthday"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="date"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="50dp"
                    android:text="@string/Sexe"
                    android:textSize="12sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_profile_gender"
                        android:paddingStart="8dp"
                        android:paddingTop="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutSexe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false"
                        app:placeholderText=" ">

                        <RadioGroup
                            android:id="@+id/SexeSelection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hapticFeedbackEnabled="false"
                            android:orientation="horizontal"
                            android:transitionGroup="false"
                            android:layout_marginTop="-22dp">

                            <RadioButton
                                android:id="@+id/Sexe_Home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.33"
                                android:text="@string/Sexe_home"
                                android:textColor="@color/radiobuttonstate"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/Sexe_Dona"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.33"
                                android:text="@string/Sexe_Dona"
                                android:textColor="@color/radiobuttonstate"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/Sexe_Altre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.33"
                                android:text="@string/Sexe_Altre"
                                android:textColor="@color/radiobuttonstate"
                                android:textSize="16sp"
                                app:errorEnabled="true" />

                        </RadioGroup>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/ActualitzarUsuariButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Actualitzar_Perfil"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>