<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultarPerfilActivity">


    <ImageView
        android:id="@+id/logo2"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/Logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_fithaus" />

    <Button
        android:id="@+id/DadesPersonals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Dades\nPersonals"
        app:layout_constraintEnd_toStartOf="@+id/DadesEsportives"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo2" />

    <Button
        android:id="@+id/DadesFísiques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dades\nFísiques"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/DadesEsportives"
        app:layout_constraintTop_toTopOf="@+id/DadesEsportives" />

    <Button
        android:id="@+id/DadesEsportives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dades\nEsportives"
        app:layout_constraintEnd_toStartOf="@+id/DadesFísiques"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/DadesPersonals"
        app:layout_constraintTop_toTopOf="@+id/DadesPersonals" />

    <FrameLayout
        android:id="@+id/flFragment"
        android:layout_width="0dp"
        android:layout_height="340dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DadesPersonals" />

    <Button
        android:id="@+id/ModificarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ModificarPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flFragment" />

    <Button
        android:id="@+id/EliminarPerfil"
        android:layout_width="170dp"
        android:layout_height="53dp"
        android:layout_marginTop="72dp"
        android:text="@string/EliminarPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flFragment" />

