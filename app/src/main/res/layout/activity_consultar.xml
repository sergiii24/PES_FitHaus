<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultarPerfilFragments">


    <ImageView
        android:id="@+id/logo2"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/Logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_fithaus" />

    <Button
        android:id="@+id/DadesPersonals"
        android:layout_width="124dp"
        android:layout_height="64dp"
        android:layout_marginTop="84dp"
        android:text="@string/DadesPersonals"
        app:layout_constraintEnd_toStartOf="@+id/DadesFísiques"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/DadesEsportives"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DadesEsportives"
        android:layout_width="133dp"
        android:layout_height="58dp"
        android:layout_marginTop="84dp"
        android:text="@string/DadesEsportives"
        app:layout_constraintEnd_toStartOf="@+id/DadesPersonals"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DadesFísiques"
        android:layout_width="120dp"
        android:layout_height="62dp"
        android:layout_marginTop="84dp"
        android:text="@string/DadesFísiques"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/DadesPersonals"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/flFragment"
        android:layout_width="371dp"
        android:layout_height="460dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DadesPersonals" />

    <Button
        android:id="@+id/ModificaPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ModificarPerfil"
        app:layout_constraintBottom_toTopOf="@+id/TancarSessio2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flFragment" />

    <Button
        android:id="@+id/TancarSessio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TancarSessio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ModificaPerfil"
        app:layout_constraintVertical_bias="0.204" />


</androidx.constraintlayout.widget.ConstraintLayout>