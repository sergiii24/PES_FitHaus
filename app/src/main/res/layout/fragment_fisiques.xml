<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultarPerfilActivity">

    <TextView
        android:id="@+id/Pes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/Pes"
        app:layout_constraintStart_toStartOf="@+id/DadesFísiques"
        app:layout_constraintTop_toBottomOf="@+id/DadesFísiques" />

    <TextView
        android:id="@+id/Alçada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/Alçada"
        app:layout_constraintStart_toStartOf="@+id/DadesFísiques"
        app:layout_constraintTop_toBottomOf="@+id/Pes" />

    <TextView
        android:id="@+id/IMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/IMC"
        app:layout_constraintStart_toStartOf="@+id/DadesFísiques"
        app:layout_constraintTop_toBottomOf="@+id/Alçada" />

    <TextView
        android:id="@+id/IGC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/IGC"
        app:layout_constraintStart_toStartOf="@+id/DadesFísiques"
        app:layout_constraintTop_toBottomOf="@+id/IMC" />

    <TextView
        android:id="@+id/Històric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/Històric"
        app:layout_constraintStart_toStartOf="@+id/DadesFísiques"
        app:layout_constraintTop_toBottomOf="@+id/IGC" />

    <TextView
        android:id="@+id/DadesFísiques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="@string/DadesFísiques"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Pes_bd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:text="@string/Pes"
        app:layout_constraintStart_toStartOf="@+id/Pes"
        app:layout_constraintTop_toTopOf="@+id/Pes" />

    <TextView
        android:id="@+id/Alçada_bd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/Alçada"
        app:layout_constraintStart_toStartOf="@+id/Pes_bd"
        app:layout_constraintTop_toBottomOf="@+id/Pes_bd" />

    <TextView
        android:id="@+id/Igc_bd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/IGC"
        app:layout_constraintStart_toStartOf="@+id/Imc_bd"
        app:layout_constraintTop_toBottomOf="@+id/Imc_bd" />

    <TextView
        android:id="@+id/Imc_bd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/IMC"
        app:layout_constraintStart_toStartOf="@+id/Alçada_bd"
        app:layout_constraintTop_toBottomOf="@+id/Alçada_bd" />

    <TextView
        android:id="@+id/Històric_bd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/Històric_bd"
        app:layout_constraintStart_toStartOf="@+id/Igc_bd"
        app:layout_constraintTop_toBottomOf="@+id/Igc_bd" />
</androidx.constraintlayout.widget.ConstraintLayout>